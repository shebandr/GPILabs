<Window x:Class="GPILabs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GPILabs"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

        <StackPanel>
        <StackPanel Orientation="Horizontal" Height="30px" VerticalAlignment="Top">
            <Label>лабораторная 1</Label>
            <Button Margin="5" x:Name="l1OpenFile" Click="l1OpenFile_Click">открыть файл</Button>
            <Button Margin="5" x:Name="l1Edit" Click="l1Edit_Click">преобразование</Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="30px" VerticalAlignment="Top">
            <Label>лабораторная 2</Label>
            <Button Margin="5" x:Name="l2OpenFile" Click="l1OpenFile_Click">открыть файл</Button>
            <Button Margin="5" x:Name="l2Edit" Click="l2Edit_Click">преобразование</Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="30px" VerticalAlignment="Top">
            <Label>лабораторная 3</Label>
            <Button Margin="5" x:Name="l3OpenFile" Click="l1OpenFile_Click">открыть файл</Button>
            <Button Margin="5" x:Name="l3Edit" Click="l3Edit_Click">преобразование</Button>
        </StackPanel>
    </StackPanel>

</Window>
